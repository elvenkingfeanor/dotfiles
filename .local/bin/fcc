#!/bin/sh
#fcc
# cd to directory and show its contents

dir=$(/usr/bin/find "$HOME" -type d \( -path "$HOME"/.arx -o -path "$HOME"/mdi/msx -o -path "$HOME"/mdi/ani -o -path "$HOME"/.pki -o -path "$HOME"/.librewolf -o -path "$HOME"/.ssh -o -path "$HOME"/.cache \) -prune -false -o -type d -name '*' -print | /usr/bin/fzf)

if [ -z "$dir" ]; then
    /usr/bin/echo "No directory selected. Exiting..."
    exit 1
    else
        cd "$dir"
fi

/usr/bin/clear
/usr/bin/eza -lo --no-permissions --group-directories-first --grid
$SHELL
