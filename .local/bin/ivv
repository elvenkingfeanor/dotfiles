#!/bin/sh
#ivv
# open all image files, without caching, in directory with nsxiv
# display selected images absolute paths to stdout

/usr/bin/find . -maxdepth 1 \
    -type f \( \
    -iname "*.jpg" -o \
    -iname "*.jpeg" -o \
    -iname "*.png" -o \
    -iname "*.gif" -o \
    -iname "*.tiff" -o \
    -iname "*.bmp" -o \
    -iname "*.webp" \
    \) -print | \
    /usr/bin/sort -t '.' -k 3,3 -n | \
    /usr/bin/xargs /usr/bin/nsxiv -iftpoq | \
    /usr/bin/sed 's@^\.@'"$PWD"'@' | \
    /usr/bin/paste -s -d ' ' | \
    /usr/bin/tr -d '\n'
