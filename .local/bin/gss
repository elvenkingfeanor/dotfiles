#!/bin/sh
#gss
# grep within specific config directories for patterns

/usr/bin/find \
    "$XDG_CONFIG_HOME"/shell \
    "$XDG_CONFIG_HOME"/X11 \
    "$HOME"/.local/bin \
    "$XDG_CONFIG_HOME"/suckless \
    "$XDG_CONFIG_HOME"/nvim \
    "$XDG_CONFIG_HOME"/crond \
    "$XDG_CONFIG_HOME"/doom \
    "$XDG_CONFIG_HOME"/dunst \
    "$XDG_CONFIG_HOME"/yt-dlp \
    "$XDG_CONFIG_HOME"/zathura \
    "$XDG_CONFIG_HOME"/zsh \
    -prune -o -type f | \
    /usr/bin/xargs /usr/bin/grep -iIrn --color "$1"
