#!/bin/sh
#freedisk
# check storage space used and available on / and /home partitions

# available space on /home partition
avh="$(/usr/bin/df -h ~ | \
    /usr/bin/tail -n 1 | \
    /usr/bin/tr -s '[:blank:]' | \
    /usr/bin/cut -d ' ' -f 4)"

# percent used space on /home partition
usph="$(/usr/bin/df -h ~ | \
    /usr/bin/tail -n 1 | \
    /usr/bin/tr -s '[:blank:]' | \
    /usr/bin/cut -d ' ' -f 5)"

# available space on / partition
avr="$(/usr/bin/df -h / | \
    /usr/bin/tail -n 1 | \
    /usr/bin/tr -s '[:blank:]' | \
    /usr/bin/cut -d ' ' -f 4)"

# percent used space on / partition
uspr="$(/usr/bin/df -h / | \
    /usr/bin/tail -n 1 | \
    /usr/bin/tr -s '[:blank:]' | \
    /usr/bin/cut -d ' ' -f 5)"

# varh=$(/usr/bin/df -h ~ | /usr/bin/awk 'FNR == 2 {print $5,$4}') # too much awk!
# varr=$(/usr/bin/df -h / | /usr/bin/awk 'FNR == 2 {print $5,$4}') # well, this is AWKward!
# /usr/bin/echo "$varh|$varr" | /usr/bin/sed 's/\ /:/g'

/usr/bin/printf "%s" "ğŸ—„ï¸$usph:$avhğŸ’¿$uspr:$avr"
