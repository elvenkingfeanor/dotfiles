#!/bin/sh
#mmm
# play all video files in directory

/usr/bin/find . -maxdepth 1 \
    -type f \( \
    -iname "*.mkv" -o \
    -iname "*.mp4" -o \
    -iname "*.webm" -o \
    -iname "*.m4v" -o \
    -iname "*.mov" -o \
    -iname "*.avi" \
    \) -print | \
    /usr/bin/sort -t '.' -k 3,3 -n | \
    /usr/bin/xargs /usr/bin/mpv
