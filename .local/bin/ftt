#!/bin/sh
#ftt
# cd to directory and show its tree view

dir=$(/usr/bin/find "$HOME" -type d \( -path "$HOME"/.android -o \
      -path "$HOME"/.arx -o \
      -path "$HOME"/.cache -o \
      -path "$HOME"/.config/BraveSoftware -o \
      -path "$HOME"/.config/GIMP -o \
      -path "$HOME"/.config/libreoffice -o \
      -path "$HOME"/.config/Signal -o \
      -path "$HOME"/.librewolf -o \
      -path "$HOME"/.local/share -o \
      -path "$HOME"/.local/state -o \
      -path "$HOME"/.mozilla -o \
      -path "$HOME"/mdi/ani -o \
      -path "$HOME"/mdi/msx -o \
      -path "$HOME"/.pki -o \
      -path "$HOME"/.ssh -o \
      -path "$HOME"/.vbox-vols \) -prune -false -o -type d -name '*' -print | /usr/bin/fzf)

if [ -z "$dir" ]; then
    /usr/bin/echo "No directory selected. Exiting..."
    exit 1
    else
        cd "$dir"
fi

/usr/bin/clear
/usr/bin/tree -aC | /usr/bin/ov
$SHELL
