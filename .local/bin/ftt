#!/bin/sh
#ftt
# show tree view of selected directory, after cd-ing into it

dir=$(/usr/bin/find "$HOME" -type d \( -path "$HOME"/.arx -o -path "$HOME"/mdi/msx -o -path "$HOME"/.pki -o -path "$HOME"/.librewolf -o -path "$HOME"/.ssh -o -path "$HOME"/.cache \) -prune -false -o -type d -name '*' -print | /usr/bin/fzf)

if [ -z "$dir" ]; then
    /usr/bin/echo "No directory selected. Exiting..."
    exit 1
    else
        cd "$dir"
fi

/usr/bin/clear
/usr/bin/tree -aC | /usr/bin/ov
$SHELL
