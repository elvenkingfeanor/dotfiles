#!/bin/sh
#dpath
# yank directory path to system clipboard

/usr/bin/find "$HOME" -type d \( -path "$HOME"/.arx -o -path "$HOME"/.android -o -path "$HOME"/.bak -o -path "$HOME"/.cache -o -path "$HOME"/.librewolf -o -path "$HOME"/.mozilla -o -path "$HOME"/.vbox-vols -o -path "$HOME"/.pki -o -path "$HOME"/.ssh  -o -path "$HOME"/mdi/ani \) -prune -false -o -type d -name '*' -print | /usr/bin/fzf -m | /usr/bin/paste -s -d ' ' | /usr/bin/tr -d '\n' | /usr/bin/xclip -selection clipboard
