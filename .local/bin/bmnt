#!/bin/sh
#bmnt
# mount removable backup media

# if LABEL=backup drive not mounted, mount it
loaded=$(/usr/bin/findmnt -rn -S LABEL=backup)
mountpoint=$(/usr/bin/lsblk -l -o +LABEL | /usr/bin/grep backup | /usr/bin/cut -c -4)

if [ -z "$loaded" ]; then
	/usr/bin/pmount /dev/"$mountpoint" backup
	/usr/bin/notify-send "Backup drive mounted to /media/backup"
	else
		/usr/bin/notify-send "Backup drive already mounted at /media/backup"
fi
