#!/bin/sh
#fff
# if bootable media is mounted, find its directory structure -quietly

loaded=$(/usr/bin/findmnt -rn -S LABEL=backup)

if [ -n "$loaded" ]; then
	/usr/bin/notify-send "Generating directory tree"
	/usr/bin/find /media/backup/ . > /dev/null
	/usr/bin/notify-send "Directory tree generated"
	else
		/usr/bin/notify-send "Backup drive not mounted. Exiting..."
fi
